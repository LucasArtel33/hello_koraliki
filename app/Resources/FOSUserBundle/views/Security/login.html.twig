{% trans_default_domain 'FOSUserBundle' %}
{% extends 'template/base.html.twig' %}

{% block fos_user_content %}

    <h1 class="login_title">
        <a class="current" href="{{ path('fos_user_security_login') }}">Connexion</a> / <a href="{{ path('fos_user_registration_register') }}">Inscription</a>
    </h1>

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="login_form">
        <form action="{{ path("fos_user_security_check") }}" method="post">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}
            <div class="form_item">
                <label class="login_label" for="username">{{ 'security.login.username'|trans }}</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
            </div>

            <div class="form_item">
                <label class="login_label" for="password">{{ 'security.login.password'|trans }}</label>
                <input type="password" id="password" name="_password" required="required" autocomplete="current-password" />
            </div>

            <div class="form_item">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label class="login_label" for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
            </div>
            <div class="form_item">
                <input class="login_input" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
            </div>
        </form>
    </div>
{% endblock %}