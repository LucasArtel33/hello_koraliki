{% extends 'template/adminBase.html.twig' %}

{% block title %} Supprimer un produit {% endblock %}

{% block content %}
    <h1 class="text-center">Supprimer un produit</h1>
    <div class="suppr_nav">
        {{ form_start(searchForm) }}
            <div class="formde">
                <div>
                    {{ form_errors(searchForm.search) }}
                    {{ form_widget(searchForm.search, {'attr': {'class': 'form-control', 'placeholder': 'Rechercher'}}) }}
                </div>
                <div>
                    {{ form_widget(searchForm.submit, {'attr': {'class': 'btn btn-primary' }}) }}
                </div>
            </div>
        {{ form_end(searchForm) }}
        <div>
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Trier par :
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <a class="dropdown-item" href="{{ path('supprProduct') }}">Tous les produit</a>
                <a class="dropdown-item" href="{{ path('supprProductCategory', {'category': 1}) }}">Bracelets</a>
                <a class="dropdown-item" href="{{ path('supprProductCategory', {'category': 2}) }}">Colliers</a>
                <a class="dropdown-item" href="{{ path('supprProductCategory', {'category': 3}) }}">Boucles d'oreilles</a>
            </div>
        </div>
    </div>
    <div class="all_product">
        {% for product in products %}
            <div class="product">
                <a href="{{ path(product.category.type,{'id' : product.id}) }}">
                    <img class="img_category" src="{{ asset('assets/img/product/'~product.img.img1) }}" alt="produit">
                </a>
                <div class="info_category">
                    <p class="text-center">{{ product.name }}</p>
                    <a href="{{ path('supprProductId',{'id' : product.id}) }}">
                        <p class="text-center">Supprimer le produit</p>
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}