{% extends 'template/'~template %}

{% block title %}
    Colliers
{% endblock %}

{% block content %}
    <h1 class="title_category">Les Colliers</h1>
    <div class="bar">
        <nav class="tree">
            <a href="{{ path("home") }}" class="tree_item">
                <p>Accueil </p>
            </a>
            <a href="{{ path("allCollier") }}" class="tree_item">
                <p class="current bracelet"> / Colliers</p>
            </a>
        </nav>
        {#        <p class="no_idea">Voici les {{ nombre }} résultats</p>#}
        <div class="dropdown">
            <a href="">
                <p class="dropbtn tri ">Trier par</p>
            </a>
            <div class="dropdown-content">
                <a href="{{ path("allCollier") }}">Nouveauté</a>
                <a href="{{ path("collier_asc") }}">Prix croissant</a>
                <a href="{{ path("collier_desc") }}">Prix décroissant</a>
            </div>
        </div>
    </div>
    <div class="all_product">
        {% for product in products %}
            <div class="product">
                <a href="{{ path(product.category.type,{'id' : product.id}) }}">
                    <img class="img_category" src="{{ asset('assets/img/product/'~product.img.img1) }}" alt="produit">
                    <div class="info_category">
                        <p>{{ product.name }}</p>
                        <p>{{ product.price }} €</p>
                    </div>
                </a>
            </div>
        {% endfor %}
    </div>
    <div class="bar">
        <nav class="tree">
            <a href="{{ path("home") }}" class="tree_item">
                <p>Accueil </p>
            </a>
            <a href="{{ path("allCollier") }}" class="tree_item">
                <p class="current bracelet"> / Colliers</p>
            </a>
        </nav>
        {#        <p class="no_idea">Voici les {{ nombre }} résultats</p>#}
        <div class="dropdown">
            <a href="">
                <p class="dropbtn tri ">Trier par</p>
            </a>
            <div class="dropdown-content">
                <a href="{{ path("allCollier") }}">Nouveauté</a>
                <a href="{{ path("collier_asc") }}">Prix croissant</a>
                <a href="{{ path("collier_desc") }}">Prix décroissant</a>
            </div>
        </div>
    </div>
{% endblock %}

